<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/match_words" android:layout_width="wrap_content" android:layout_height="wrap_content">

        <EditTextPreference
                app:key="org.leo.dictionary.apk.config.entity.MatchWords.limit"
                android:defaultValue="10"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:inputType="number"
                android:title="@string/words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useSimpleSummaryProvider="true"/>
        <SwitchPreference
                app:key="org.leo.dictionary.apk.config.entity.MatchWords.showWord"
                android:defaultValue="true"
                android:title="Show word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </PreferenceCategory>
</PreferenceScreen>