<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="viewmodel"
                type="org.leo.dictionary.apk.activity.DetailsViewModel"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.DetailsFragment"
            android:orientation="vertical"
            android:visibility="@{viewmodel.uiState==null?android.view.View.GONE:android.view.View.VISIBLE}">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/word"
                android:text="@{viewmodel.uiState.fullWord}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center_horizontal"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/translation"
                android:text='@{viewmodel.uiState.getFormattedTranslations(", ")}'
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center_horizontal"/>

    </LinearLayout>
</layout>