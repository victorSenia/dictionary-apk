<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="viewmodel"
                type="org.leo.dictionary.apk.activity.EditWordViewModel"/>
    </data>
    <LinearLayout
            android:id="@+id/edit_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.EditWordFragment"
            android:orientation="horizontal"
            android:background="@drawable/word_background">

        <EditText
                android:id="@+id/text_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="language"
                android:text="@={viewmodel.uiState.language}" android:minHeight="48dp" android:layout_weight="0"
                android:layout_gravity="center_vertical"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:layout_gravity="center_vertical">
            <EditText
                    android:text="@={viewmodel.uiState.article}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="article"
                    android:id="@+id/text_article" android:minHeight="48dp"/>
            <EditText
                    android:text="@={viewmodel.uiState.word}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="word"
                    android:id="@+id/text_word" android:minHeight="48dp"/>
            <EditText
                    android:text="@={viewmodel.uiState.additionalInformation}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="additionalInformation"
                    android:id="@+id/text_additional_information" android:minHeight="48dp"/>
        </LinearLayout>
        <Button
                android:text="@string/action_play_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/play_word" android:layout_weight="0"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                android:drawableLeft="@android:drawable/ic_media_play" android:textSize="0sp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
</layout>