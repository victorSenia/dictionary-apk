<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="viewmodel"
                type="org.leo.dictionary.apk.activity.FilterWordsActivity.LanguageViewModel"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.VoiceSelectorActivity"
            android:orientation="vertical">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/language"
                android:text="@={viewmodel.selected}"
                android:ems="10"
                android:id="@+id/language"/>
        <Button
                android:text="@string/default_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/default_voice"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"/>
        <androidx.fragment.app.FragmentContainerView
                android:id="@+id/voices"
                android:name="org.leo.dictionary.apk.activity.VoiceSelectorActivity$VoicesFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/fragment_string"/>
    </LinearLayout>
</layout>